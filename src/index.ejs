    <div class="fullMain">
        <!--Sidebar Navigation-->
        <aside>
            <div class="sidebar-menu-title user-profile">
                <div class="user-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor"
                        class="bi bi-person-circle" viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"></path>
                        <path fill-rule="evenodd"
                            d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1">
                        </path>
                    </svg>
                    <!-- Username -->
                    <div class="username">
                        <div>Username</div>
                        <div>Prudence (Admin)</div>
                    </div>
                </div>
                <div class="dropdown-icon" id="dropdown-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                        class="bi bi-chevron-down" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708">
                        </path>
                    </svg>
                </div>
            </div>

            <div class="divider top-div"></div>
            <!-- Menu List -->
            <div class="sidebar-menu-list">
                <ul>
                    <!-- List Item For Dashboard -->
                    <li>
                        <div class="dashboard-link menu-list">
                            Dashboard
                        </div>
                    </li>

                    <!-- List Item For File Management -->
                    <li>
                        <div class="fileMgmt-link menu-list">
                            File Management
                        </div>
                    </li>

                    <!-- List Item For Letter Management -->
                    <li>
                        <div class="letterMgmt-link menu-list">
                            Letter Management
                        </div>
                    </li>

                    <!-- List Item For Report Management -->
                    <li>
                        <div class="reports-link menu-list">
                            Report Management
                        </div>
                    </li>
                </ul>

            </div>
            <div class="divider down-div"></div>

            <!-- Footer Links Sidebar -->
            <div class="sidebar-footer-icons">
                <ul>
                    <li>Account</li>
                    <li>Help & Support</li>
                    <li><button type="button" class="sidebar-sign-out" id="sign-out-button"> <svg
                                xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                                class="bi bi-box-arrow-in-left" viewBox="0 0 16 16">
                                <path fill-rule="evenodd"
                                    d="M10 3.5a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 1 1 0v2A1.5 1.5 0 0 1 9.5 14h-8A1.5 1.5 0 0 1 0 12.5v-9A1.5 1.5 0 0 1 1.5 2h8A1.5 1.5 0 0 1 11 3.5v2a.5.5 0 0 1-1 0z" />
                                <path fill-rule="evenodd"
                                    d="M4.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H14.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708z" />
                            </svg>Sign Out </button></li>
                </ul>
            </div>
        </aside>

        <!--Main Content Container-->
        <main class="">
            <!-- Main content area -->
            <div id="content">
                <!-- Dynamic content will be displayed here -->
                <%- include('../views/pages/dashboard.ejs') %> <!-- Load dashboard content by default -->
            </div>
        </main>
        <!-- Spinner Display -->
        <div class="spinner-display" id="spinner-event">
            <div class="spinner-title h3">Loading</div>
            <div class="spinner">
                <span class="spinner-border spinner-border-sm m-2" id="loader"></span>
            </div>
        </div>
    </div>

    <footer>

    </footer>

    <!-- JavaScript -->
    <script type="text/javascript" src="../public/js/renderer.js"></script>
    <script type="text/javascript" src="../node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>