{
  "name": "recordsmanagement.sys",
  "version": "1.0.0",
  "description": "Records Management System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "node tests/signout.test.js",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "webpack",
    "analyze": "webpack --profile --json > stats.json && webpack-bundle-analyzer stats.json",
    "migrate": "node database/migrate.js",
    "migrate:status": "node database/migrate.js --status"
  },
  "keywords": [
    "records",
    "files",
    "letters"
  ],
  "author": "Peter Quayetey",
  "license": "MIT",
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "datatables.net": "^2.1.4",
    "datatables.net-dt": "^2.1.4",
    "daterangepicker": "^3.1.0",
    "ejs": "^3.1.10",
    "ejs-electron": "^3.0.0",
    "electron-build": "^0.0.3",
    "electron-log": "^5.1.7",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.3.4",
    "express": "^4.19.2",
    "html2canvas": "^1.4.1",
    "jquery": "^3.7.1",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "latest": "^0.2.0",
    "print-this": "^2.0.0",
    "puppeteer": "^23.3.0",
    "sql.js": "^1.11.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron-forge/publisher-github": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^32.0.1",
    "electron-rebuild": "^3.2.9",
    "webpack-bundle-analyzer": "^4.10.2"
  },
"build": {
  "appId": "com.codecol.recordsmanagement",
  "productName": "Records Management System",
  "directories": {
    "output": "dist"
  },
  "files": [
    "dist/**/*",
    "node_modules/**/*",
    "main.js",
    "index.html",
    "package.json",
    "database/**/*"
  ],
    "publish": [
      {
        "provider": "github",
        "owner": "petertyt",
        "repo": "recordsManagement.sys",
        "private": true,
        "releaseType": "draft"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/petertyt/recordsManagement.sys"
  }
}
