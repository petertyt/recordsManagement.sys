<!-- NEW TABLE CONFIGURATION -->
<div class="recentEntries-header fileManagement-header">
    <div class="h3 fw-regular text-muted">File Management:</div>
    <!-- Add File Button -->
    <div class="row mb-3">
        <div class="col-md-6 text-end">
            <button class="btn btn-primary" id="new-file" onclick="setupModalActions()">Add New File</button>
        </div>
    </div>
</div>
<div class="activity2 recentEntries-tbl bg-light bg-gradient" id="fileEntries-tbl">
    <div class="table2-container table-container">
        <table class="table table-striped table-bordered table-hover display" id="file-table">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Entry Date</th>
                    <th>File Number</th>
                    <th>Subject</th>
                    <th>Officer</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Data will be dynamically populated -->
            </tbody>
        </table>
    </div>
</div>

<!-- Modal for Adding/Editing Files -->
<div class="modal fade" id="fileModal" tabindex="-1" aria-labelledby="fileModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg"> <!-- Use modal-lg for a larger modal size -->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="fileModalLabel">Add/Edit File</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="fileForm">
                    <div class="container">
                        <div class="row mb-3">
                            <!-- Entry Date -->
                            <div class="col-md-6">
                                <label for="entry_date" class="form-label">Entry Date</label>
                                <input type="text" class="form-control" id="entry_date" name="entry_date" disabled>
                            </div>
                            <!-- Entry Category -->
                            <div class="col-md-6">
                                <label for="entry_category" class="form-label">Entry Category</label>
                                <input type="text" class="form-control" id="entry_category" name="entry_category" value="File" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <!-- File Number -->
                            <div class="col-md-6">
                                <label for="file_number" class="form-label">File Number</label>
                                <input type="text" class="form-control" id="file_number" name="file_number" required>
                            </div>
                            <!-- Subject -->
                            <div class="col-md-6">
                                <label for="subject" class="form-label">Subject</label>
                                <textarea class="form-control" id="subject" name="subject" rows="2" required></textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <!-- Officer Assigned -->
                            <div class="col-md-6">
                                <label for="officer_assigned" class="form-label">Officer Assigned</label>
                                <input list="officers" class="form-control" id="officer_assigned" name="officer_assigned" required>
                                <datalist id="officers">
                                    <option value="CLAO/C1"></option>
                                    <option value="DISPATCH"></option>
                                    <option value="DIRECTOR"></option>
                                    <option value="DCLAO/C2"></option>
                                    <option value="ALAO 1"></option>
                                    <option value="CLAO/GV"></option>
                                    <option value="ACCOUNTS"></option>
                                    <option value="CLAO/C3"></option>
                                    <option value="CARTO"></option>
                                    <option value="CLAT"></option>
                                    <option value="PLAT"></option>
                                    <option value="ALAO 2"></option>
                                    <option value="ALAO 3"></option>
                                    <option value="HUMAN RESOURCE (HR)"></option>
                                </datalist>
                            </div>
                            <!-- Received Date -->
                            <div class="col-md-6">
                                <label for="recieved_date" class="form-label">Received Date</label>
                                <input type="date" class="form-control" id="recieved_date" name="recieved_date">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <!-- Date Sent -->
                            <div class="col-md-6">
                                <label for="date_sent" class="form-label">Date Sent</label>
                                <input type="date" class="form-control" id="date_sent" name="date_sent">
                            </div>
                            <!-- File Type -->
                            <div class="col-md-6">
                                <label for="file_type" class="form-label">File Type</label>
                                <select class="form-select" id="file_type" name="file_type" required>
                                    <option value="Main File">Main File</option>
                                    <option value="Claimant File">Claimant File</option>
                                    <option value="Report">Report</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <!-- Reciepient Name -->
                            <div class="col-md-6">
                                <label for="reciepient" class="form-label">Reciepient Name</label>
                                <input type="text" class="form-control" id="reciepient" name="reciepient" placeholder="NULL">
                            </div>
                            <!-- Description -->
                            <div class="col-md-6">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" id="description" name="description" rows="2" placeholder="NULL"></textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <!-- Status -->
                            <div class="col-md-6">
                                <label for="status" class="form-label">Status</label>
                                <select class="form-select" id="status" name="status" required>
                                    <option value="OUT">OUT</option>
                                    <option value="IN">IN</option>
                                </select>
                            </div>
                        </div>
                        <!-- Hidden Field for Entry ID -->
                        <input type="hidden" id="entry_id" name="entry_id">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary d-none" id="save-file">Save</button>
                <button type="button" class="btn btn-primary d-none" id="update-file">Update</button>
            </div>
            
        </div>
    </div>
</div>

<div class="alert alert-danger d-none" id="fileModalError" role="alert"></div>
