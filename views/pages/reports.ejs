<div class="container mt-5">
    <h2 class="mb-4 text-center">Report Management</h2>

    <!-- Filters for Report Generation -->
    <form id="report-filter-form" class="row g-3">
        <!-- Date Range Filter -->
        <div class="col-md-4">
            <label for="start-date" class="form-label">Start Date</label>
            <input type="date" class="form-control" id="start-date" name="start-date">
        </div>
        <div class="col-md-4">
            <label for="end-date" class="form-label">End Date</label>
            <input type="date" class="form-control" id="end-date" name="end-date">
        </div>
        <div class="col-md-4">
            <label for="officer-assigned" class="form-label">Officer Assigned</label>
            <input list="officers" class="form-control" id="officer-assigned" name="officer-assigned" required>
            <datalist id="officers">
                <option value="CLAO/C1"></option>
                <option value="DISPATCH"></option>
                <option value="DIRECTOR"></option>
                <option value="DCLAO/C2"></option>
                <option value="ALAO 1"></option>
                <option value="CLAO/GV"></option>
                <option value="ACCOUNTS"></option>
                <option value="CLAO/C3"></option>
                <option value="CARTO"></option>
                <option value="CLAT"></option>
                <option value="PLAT"></option>
                <option value="ALAO 2"></option>
                <option value="ALAO 3"></option>
                <option value="HUMAN RESOURCE (HR)"></option>
            </datalist>
        </div>

        <div class="col-md-4">
            <label for="status" class="form-label">Status</label>
            <select class="form-select" id="status" name="status">
                <option value="">Select Status</option>
                <option value="IN">IN</option>
                <option value="OUT">OUT</option>
                <option value="FILED">FILED</option>
                <option value="PENDING">PENDING</option>
            </select>
        </div>
        <div class="col-md-4">
            <label for="file-number" class="form-label">File Number</label>
            <input type="text" class="form-control" id="file-number" name="file-number">
        </div>
        <div class="col-md-4">
            <label for="category" class="form-label">Category</label>
            <select class="form-select" id="category" name="category">
                <option value="">Select Category</option>
                <option value="File">File</option>
                <option value="Letter">Letter</option>
            </select>
        </div>

        <div class="col-12 text-center">
            <button type="button" class="btn btn-primary" id="generate-report">Generate Report</button>
        </div>
    </form>

    <!-- Report Display Section -->
    <div id="report-section" class="mt-4">
        <h3 class="text-center">Generated Report</h3>
        <div id="report-content" class="table-responsive"></div>
    </div>

    <!-- Export Buttons -->
    <div class="mt-3 text-center">
        <button id="export-pdf" class="btn btn-secondary me-2">Export as PDF</button>
        <button id="export-csv" class="btn btn-secondary">Export as CSV</button>
    </div>
</div>
